<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>


    <application
        android:name=".main.NovaApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NovaApp">

        <activity
            android:name=".home.AdminLandingPage"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.NovaApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".authentication.ActivityPhoneNumber"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NovaApp"
            />

        <activity
            android:name=".authentication.ActivityPhoneNumberVerification"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NovaApp"
            />

        <activity
            android:name=".home.ActivityJobStatus"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NovaApp"
            />

        <activity
            android:name=".home.ActivityAllProperties"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NovaApp"

            />

        <activity
            android:name=".home.ActivityBookService"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NovaApp"
            android:windowSoftInputMode="adjustResize"

            />

        <activity
            android:name=".home.ActivityAllServices"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NovaApp"
            />

        <activity
            android:name=".home.ActivityCompleteBooking"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NovaApp"
            android:windowSoftInputMode="adjustResize"
            />

        <activity
            android:name=".home.ActivityManagerDetails"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NovaApp"
            />

        <activity
            android:name=".home.ActivityPropertyDetails"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NovaApp"
            />

        <activity
            android:name=".home.ActivityOrderDetails"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NovaApp"
            />

        <activity
            android:name=".home.ActivityPendingBill"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NovaApp"
            />

        <activity
            android:name=".home.ActivityAddCard"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NovaApp"
            />

        <activity
            android:name=".home.ActivityAddProperty"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NovaApp"
            />

        <activity
            android:name=".home.ActivityPropertySize"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NovaApp"
            />

        <activity
            android:name=".home.ActivityPropertyAddress"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NovaApp"
            />

        <activity
            android:name=".home.ActivityConfirmDetails"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NovaApp"
            />

        <activity
            android:name=".home.ActivityActiveJob"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NovaApp"
            />

        <activity
            android:name=".utilities.ActivityManageNotifications"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NovaApp"
            />

        <activity android:name=".utilities.ActivityReferral"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NovaApp"
            />

        <activity android:name=".utilities.ActivityAbout"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NovaApp"
            />

        <activity android:name=".utilities.ActivityPrivacyPolicy"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NovaApp"
            />

        <activity android:name=".utilities.ActivityTermsAndConditions"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NovaApp"
            />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />


        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.zeroone.novaapp.provider"

            android:exported="false"

            android:grantUriPermissions="true">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/freshchat_file_provider_paths" />

        </provider>

        <service
            android:name=".utils.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>




</manifest>