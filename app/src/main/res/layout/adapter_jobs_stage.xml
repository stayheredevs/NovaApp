<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llStage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgStage"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/icon_circle_stage"

                />

            <View
                android:id="@+id/view"
                android:layout_width="2dp"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-3dp"
                android:background="@color/quantum_grey600" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtStage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accepted"
                android:textColor="@color/quantum_grey900"
                style="@style/NovaBold"
                android:textSize="15sp"
                android:layout_marginTop="1dp"
                />

            <LinearLayout
                android:id="@+id/llDescription"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="4dp"
                android:visibility="visible"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtActionDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Action description will be here"
                    style="@style/NovaMedium"
                    android:textColor="@color/quantum_grey700"
                    />

                <LinearLayout
                    android:id="@+id/llAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_layout"
                    android:visibility="gone"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/txtAction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Action"
                        android:textColor="@color/white"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="3dp"
                        style="@style/NovaMedium"
                        />

                </LinearLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:layout_gravity="end">

                    <TextView
                        android:id="@+id/textMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="More"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/NovaRegular"
                        android:textColor="@color/black"
                        android:textSize="15sp"

                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/outline_arrow_forward_ios_black_24"
                        app:layout_constraintStart_toEndOf="@+id/textMore"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />



                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>