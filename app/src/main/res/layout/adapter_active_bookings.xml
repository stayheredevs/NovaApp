<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/white"
        app:strokeWidth="1.5dp"
        app:strokeColor="@color/border_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:minHeight="96dp"
            >

            <!-- Service Icon Container -->
            <FrameLayout
                android:id="@+id/iconContainer"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="gone">

                <View
                    android:id="@+id/viewIconBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/service_icon_background" />

                <ImageView
                    android:id="@+id/imgServiceNme"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/cleaning_services"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center" />
            </FrameLayout>

            <!-- Property Name -->
            <TextView
                android:id="@+id/txtPropertyName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/property_name"
                android:textColor="@color/text_primary"
                android:textSize="17sp"
                android:letterSpacing="0.01"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintStart_toEndOf="@+id/iconContainer"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/statusBadge"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="12dp" />

            <!-- Service Type Container -->
            <LinearLayout
                android:id="@+id/layoutServiceType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@+id/iconContainer"
                app:layout_constraintTop_toBottomOf="@+id/txtPropertyName"
                android:layout_marginStart="16dp">

                <ImageView
                    android:id="@+id/imgServiceTypeIcon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_general_cleaning"
                    app:tint="@color/text_secondary"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/textServiceType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service_type"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:letterSpacing="0.01" />
            </LinearLayout>

            <!-- Date/Time -->
            <TextView
                android:id="@+id/txtDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today, 2:30 PM"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/text_hint"
                android:textSize="13sp"
                android:letterSpacing="0.01"
                android:layout_marginTop="6dp"
                app:layout_constraintStart_toEndOf="@+id/iconContainer"
                app:layout_constraintTop_toBottomOf="@+id/layoutServiceType"
                android:layout_marginStart="16dp" />

            <!-- Status Badge -->
            <TextView
                android:id="@+id/statusBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="ACCEPTED"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:letterSpacing="0.05"
                android:textAllCaps="true"
                android:background="@drawable/status_badge_accepted"
                android:elevation="2dp"
                app:layout_constraintEnd_toStartOf="@+id/imgArrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="6dp" />

            <!-- Arrow Icon -->
            <ImageView
                android:id="@+id/imgArrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/outline_arrow_forward_ios_black_20"
                app:tint="@color/text_hint"
                android:alpha="0.6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>