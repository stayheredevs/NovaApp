<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:scrollbars="none"
        android:paddingBottom="24dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="48dp">

            <!-- Profile Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/white"
                app:strokeWidth="0dp"
                app:rippleColor="@color/ripple_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <!-- Profile Picture -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardProfilePicture"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="@color/service_icon_background"
                        app:cardBackgroundColor="@color/service_icon_background"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <ImageView
                            android:id="@+id/imgProfilePic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/user_placeholder"
                            android:contentDescription="Profile Picture"
                            android:scaleType="centerCrop"
                            android:padding="4dp" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- User Name -->
                    <TextView
                        android:id="@+id/txtUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_name"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat_bold"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardProfilePicture"
                        tools:text="John Doe" />

                    <!-- Email Address -->
                    <TextView
                        android:id="@+id/txtUserEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_email"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtUserName"
                        tools:text="john.doe@example.com" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Menu Items Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMenuItems"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/white"
                app:strokeWidth="0dp"
                app:rippleColor="@color/ripple_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardProfile">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Contact Support -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layoutContactSupport"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/iconContactSupport"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/outline_call_24"
                            android:contentDescription="@string/contact_support"
                            app:tint="@color/primary_color"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/txtContactSupport"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/contact_support"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_medium"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toEndOf="@+id/iconContactSupport"
                            app:layout_constraintEnd_toStartOf="@+id/arrowContactSupport"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <ImageView
                            android:id="@+id/arrowContactSupport"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/outline_arrow_forward_ios_24"
                            android:contentDescription="Arrow"
                            app:tint="@color/text_secondary"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="56dp"
                        android:background="@color/border_color" />

                    <!-- Manage Notification -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layoutManageNotification"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/iconManageNotification"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/outline_notifications_24"
                            android:contentDescription="@string/manage_notification"
                            app:tint="@color/primary_color"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/txtManageNotification"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/manage_notification"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_medium"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toEndOf="@+id/iconManageNotification"
                            app:layout_constraintEnd_toStartOf="@+id/arrowManageNotification"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <ImageView
                            android:id="@+id/arrowManageNotification"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/outline_arrow_forward_ios_24"
                            android:contentDescription="Arrow"
                            app:tint="@color/text_secondary"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="56dp"
                        android:background="@color/border_color" />

                    <!-- Send Referral -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layoutSendReferral"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/iconSendReferral"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/outline_share_24"
                            android:contentDescription="@string/send_referral"
                            app:tint="@color/primary_color"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/txtSendReferral"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/send_referral"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_medium"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toEndOf="@+id/iconSendReferral"
                            app:layout_constraintEnd_toStartOf="@+id/arrowSendReferral"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <ImageView
                            android:id="@+id/arrowSendReferral"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/outline_arrow_forward_ios_24"
                            android:contentDescription="Arrow"
                            app:tint="@color/text_secondary"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="56dp"
                        android:background="@color/border_color" />

                    <!-- About -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layoutAbout"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/iconAbout"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/outline_info_24"
                            android:contentDescription="@string/about"
                            app:tint="@color/primary_color"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/txtAbout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/about"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_medium"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toEndOf="@+id/iconAbout"
                            app:layout_constraintEnd_toStartOf="@+id/arrowAbout"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <ImageView
                            android:id="@+id/arrowAbout"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/outline_arrow_forward_ios_24"
                            android:contentDescription="Arrow"
                            app:tint="@color/text_secondary"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="56dp"
                        android:background="@color/border_color" />

                    <!-- Terms and Conditions -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layoutTermsAndConditions"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/iconTermsAndConditions"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/outline_note_24"
                            android:contentDescription="@string/terms_and_conditions"
                            app:tint="@color/primary_color"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/txtTermsAndConditions"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/terms_and_conditions"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_medium"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toEndOf="@+id/iconTermsAndConditions"
                            app:layout_constraintEnd_toStartOf="@+id/arrowTermsAndConditions"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <ImageView
                            android:id="@+id/arrowTermsAndConditions"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/outline_arrow_forward_ios_24"
                            android:contentDescription="Arrow"
                            app:tint="@color/text_secondary"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="56dp"
                        android:background="@color/border_color" />

                    <!-- Privacy Policy -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layoutPrivacyPolicy"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/iconPrivacyPolicy"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/outline_lock_24"
                            android:contentDescription="@string/privacy_policy"
                            app:tint="@color/primary_color"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/txtPrivacyPolicy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/privacy_policy"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_medium"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toEndOf="@+id/iconPrivacyPolicy"
                            app:layout_constraintEnd_toStartOf="@+id/arrowPrivacyPolicy"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <ImageView
                            android:id="@+id/arrowPrivacyPolicy"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/outline_arrow_forward_ios_24"
                            android:contentDescription="Arrow"
                            app:tint="@color/text_secondary"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Footer Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutFooter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardMenuItems">

                <!-- App Version -->
                <TextView
                    android:id="@+id/txtAppVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_version"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:fontFamily="@font/montserrat_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="App Version" />

                <TextView
                    android:id="@+id/txtVersionNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/version_number"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginStart="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtAppVersion"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="1.0.0" />

                <!-- Logout Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:minHeight="56dp"
                    android:layout_marginBottom="30dp"
                    android:text="@string/logout"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_bold"
                    app:cornerRadius="28dp"
                    app:backgroundTint="@color/error_color"
                    app:rippleColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtVersionNumber"
                    style="@style/Widget.Material3.Button" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>