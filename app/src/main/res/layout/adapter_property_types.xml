<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">


    <!-- Apartment Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardApartment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/border_color"
        app:cardBackgroundColor="@color/white"
        app:rippleColor="?attr/colorControlHighlight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:minHeight="80dp">

            <!-- Icon Container -->
            <!-- Property Icon Container -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clPropertyIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circular_edges_filled"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/imgProperty"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/home"
                    android:contentDescription="@string/property_name"
                    android:scaleType="fitCenter"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:tint="@color/primary_color" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Apartment Label -->
            <TextView
                android:id="@+id/txtApartment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/apartment"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center_vertical"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@+id/clPropertyIcon"
                app:layout_constraintEnd_toStartOf="@+id/imgArrowApartment"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Navigation Arrow -->
            <ImageView
                android:id="@+id/imgArrowApartment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/outline_arrow_forward_ios_24"
                android:contentDescription="Navigate"
                app:tint="@color/text_primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>