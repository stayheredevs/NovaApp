<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <!-- Header Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:visibility="gone"
        android:background="?attr/colorSurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardBackButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:rippleColor="?attr/colorControlHighlight"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/outline_arrow_back_24"
                android:contentDescription="@string/back"
                app:tint="?attr/colorOnSurface" />

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/headerContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="32dp"
            android:paddingBottom="32dp"
            android:minHeight="600dp">

            <!-- Phone Icon Container -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPhoneIcon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardCornerRadius="60dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imgPhone"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:src="@drawable/nova_logo"
                    android:contentDescription="@string/enter_phone_number"
                    />

            </com.google.android.material.card.MaterialCardView>

            <!-- Title -->
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/enter_phone_number"
                android:textColor="?attr/colorOnSurface"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_bold"
                android:letterSpacing="0.01"
                android:gravity="center"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardPhoneIcon" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/txtSubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/phone_number_subtitle"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTitle" />

            <!-- Phone Number Input Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPhoneInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                android:layout_marginTop="48dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtSubtitle">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:padding="10dp">

                    <!-- Country Code Selector -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardCountryCode"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        app:cardCornerRadius="16dp"
                        android:layout_marginStart="8dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp"
                        app:cardBackgroundColor="?attr/colorSurface"
                        app:rippleColor="?attr/colorControlHighlight"
                        android:clickable="true"
                        android:focusable="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="8dp"
                            android:paddingEnd="6dp"
                            android:minWidth="100dp">

                            <!-- Country Flag (can be replaced with actual flag drawable) -->
                            <TextView
                                android:id="@+id/txtCountryFlag"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:text="ðŸ‡°ðŸ‡ª"
                                android:textSize="20sp"
                                android:gravity="center"
                                tools:text="ðŸ‡°ðŸ‡ª" />

                            <!-- Country Code -->
                            <TextView
                                android:id="@+id/txtCountryCode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+254"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/montserrat_bold"
                                android:layout_marginStart="12dp"
                                tools:text="+254" />

                            <!-- Dropdown Arrow -->
                            <ImageView
                                android:id="@+id/imgDropdown"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/outline_arrow_forward_ios_24"
                                android:contentDescription="@string/select_country"
                                app:tint="?attr/colorOnSurfaceVariant"
                                android:rotation="90" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Divider -->
                    <View
                        android:id="@+id/divider"
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="?attr/colorOutlineVariant"
                        android:alpha="0.5"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        app:layout_constraintStart_toEndOf="@+id/cardCountryCode"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <!-- Phone Number Input -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardPhoneNumberInput"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp"
                        app:layout_constraintStart_toEndOf="@+id/divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:layout_marginStart="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp">


                            <!-- Phone Number EditText -->
                            <EditText
                                android:id="@+id/edtPhoneNumber"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:inputType="phone"
                                android:maxLines="1"
                                android:textSize="16sp"
                                android:fontFamily="@font/montserrat_medium"
                                android:textColor="?attr/colorOnSurface"
                                android:textColorHint="?attr/colorOnSurfaceVariant"
                                android:hint="@string/phone_number_hint"
                                android:imeOptions="actionDone"
                                android:gravity="center_vertical"
                                android:background="@drawable/circular_edges_layout"
                                android:padding="0dp"
                                android:paddingStart="8dp"
                                android:paddingEnd="0dp"
                                tools:text="711 000 000" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <!-- Error Message -->
            <TextView
                android:id="@+id/txtError"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/invalid_phone_number"
                android:textColor="?attr/colorError"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="start"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardPhoneInput"
                tools:text="Please enter a valid phone number"
                tools:visibility="visible" />

            <!-- Continue Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContinue"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:text="@string/continue_text"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginTop="40dp"
                android:enabled="false"
                app:cornerRadius="16dp"
                android:backgroundTint="@color/primary_color"
                app:rippleColor="?attr/colorControlHighlight"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtError"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <!-- Progress Indicator (for loading state) -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="?attr/colorPrimary"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btnContinue"
                app:layout_constraintBottom_toBottomOf="@+id/btnContinue"
                tools:visibility="gone" />

            <!-- Terms and Privacy Notice (Optional) -->
            <TextView
                android:id="@+id/txtTermsNotice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="By continuing, you agree to our Terms of Service and Privacy Policy"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:lineSpacingMultiplier="1.3"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>