<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">


    <!-- Header Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/outline_arrow_back_black_24"
            android:contentDescription="@string/back"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:tint="@color/text_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imgBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollViewNotifications"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="24dp"
        android:clipToPadding="false"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/headerContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <!-- Header / Summary -->
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/manage_notification"
                android:textColor="@color/text_primary"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_bold"
                android:letterSpacing="0.01"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                tools:text="Manage Notifications" />

            <TextView
                android:id="@+id/txtSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose how and when you want to be notified."
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginBottom="16dp"
                tools:ignore="HardcodedText" />

            <!-- Master Toggle Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMasterToggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/white"
                app:strokeWidth="0dp"
                app:rippleColor="@color/ripple_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/iconMasterToggle"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/outline_notifications_24"
                        android:contentDescription="@string/manage_notification"
                        app:tint="@color/primary_color" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/txtMasterTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Allow notifications"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_medium"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/txtMasterSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Turn off to mute all NovaApp notifications."
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:fontFamily="@font/montserrat_medium"
                            android:layout_marginTop="4dp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switchAllowNotifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Push Notifications Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPushNotifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/white"
                app:strokeWidth="0dp"
                app:rippleColor="@color/ripple_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/txtPushTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Push notifications"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_medium"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/txtPushBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recommended"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            android:fontFamily="@font/montserrat_bold"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:background="@drawable/status_badge_active"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtPushSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get alerts on your device even when you're not using the app."
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="12dp"
                        tools:ignore="HardcodedText" />

                    <!-- New bookings -->
                    <LinearLayout
                        android:id="@+id/rowNewBookings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Promotions &amp; Offers"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:fontFamily="@font/montserrat_medium"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Get notified when there are promotions and offers"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:fontFamily="@font/montserrat_medium"
                                android:layout_marginTop="2dp"
                                tools:ignore="HardcodedText" />

                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchNewBookings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:background="@color/border_color" />

                    <!-- Job status updates -->
                    <LinearLayout
                        android:id="@+id/rowJobStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Job status updates"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:fontFamily="@font/montserrat_medium"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="When a job starts, is on the way, or is completed."
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:fontFamily="@font/montserrat_medium"
                                android:layout_marginTop="2dp"
                                tools:ignore="HardcodedText" />

                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchJobStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:background="@color/border_color" />

                    <!-- Reminders -->
                    <LinearLayout
                        android:id="@+id/rowReminders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reminders"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:fontFamily="@font/montserrat_medium"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reminders for upcoming visits, unpaid bills, and follow-ups."
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:fontFamily="@font/montserrat_medium"
                                android:layout_marginTop="2dp"
                                tools:ignore="HardcodedText" />

                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchReminders"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Email & Summary Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardEmailNotifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/white"
                app:strokeWidth="0dp"
                app:rippleColor="@color/ripple_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/outline_email_24"
                            android:contentDescription="@string/manager_email"
                            app:tint="@color/primary_color" />

                        <TextView
                            android:id="@+id/txtEmailTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email updates"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_medium"
                            android:layout_marginStart="12dp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtEmailSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get receipts, invoices, and important account updates by email."
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="12dp"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switchEmailUpdates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Allow email notifications"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/montserrat_medium"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- System-level hint -->
            <TextView
                android:id="@+id/txtSystemHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Some notification controls are managed from your device settings."
                android:textColor="@color/text_secondary"
                android:textSize="11sp"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginBottom="8dp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>