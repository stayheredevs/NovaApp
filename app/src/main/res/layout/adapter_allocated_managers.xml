<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardProperty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:rippleColor="?attr/colorControlHighlight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:minHeight="80dp">

            <!-- Profile Picture Container -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardProfilePicture"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/imgProfilePicture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/user_placeholder"
                    android:contentDescription="@string/property_name"
                    android:scaleType="centerCrop"
                    android:padding="2dp" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Manager Info Container -->
            <LinearLayout
                android:id="@+id/llManagerInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintStart_toEndOf="@+id/cardProfilePicture"
                app:layout_constraintEnd_toStartOf="@+id/cardCallButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <!-- Manager Name and Status Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:baselineAligned="false">

                    <TextView
                        android:id="@+id/txtManagerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/manager_name"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat_bold"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:letterSpacing="0.01"
                        tools:text="John Smith" />

                    <!-- Status Indicator -->
                    <TextView
                        android:id="@+id/txtStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:text="Active"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:fontFamily="@font/montserrat_bold"
                        android:letterSpacing="0.05"
                        android:textAllCaps="true"
                        android:background="@drawable/status_badge_active"
                        android:visibility="visible"
                        tools:text="Active"
                        tools:visibility="visible" />

                </LinearLayout>

                <!-- Allocation Date Container -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp">

                    <ImageView
                        android:id="@+id/imgDate"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/icon_date"
                        android:contentDescription="@string/select"
                        />

                    <TextView
                        android:id="@+id/txtAllocationDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01 Jan 2025"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="14sp"
                        android:fontFamily="@font/montserrat_medium"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginStart="6dp"
                        tools:text="01 Jan 2025" />

                </LinearLayout>

            </LinearLayout>

            <!-- Call Button -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCallButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="?attr/colorPrimaryContainer"
                app:rippleColor="?attr/colorPrimary"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/imgCall"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/outline_call_24"
                    android:contentDescription="@string/select"
                    app:tint="?attr/colorPrimary" />

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>