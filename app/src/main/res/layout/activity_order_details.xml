<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_light"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Header Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/outline_arrow_back_black_24"
            android:contentDescription="@string/back"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:tint="@color/text_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/booking_details"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imgBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Selected Property Card - Material 3 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardJobDetails"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:strokeWidth="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerContainer">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:minHeight="100dp">

            <!-- Service Icon Container -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardServiceIcon"
                android:layout_width="54dp"
                android:layout_height="54dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/imgServiceIcon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_cleaning"
                    android:contentDescription="@string/service_type"
                    android:scaleType="fitCenter" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Service Info Container -->
            <LinearLayout
                android:id="@+id/llServiceInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintStart_toEndOf="@+id/cardServiceIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <!-- Service Name and Rating Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:baselineAligned="false">

                    <TextView
                        android:id="@+id/txtServiceName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/service_name"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat_bold"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:letterSpacing="0.01"
                        tools:text="Deep Cleaning Service" />

                    <!-- Rating Display -->
                    <LinearLayout
                        android:id="@+id/llRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:visibility="visible"
                        tools:visibility="visible">

                        <TextView
                            android:id="@+id/txtRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="13sp"
                            android:fontFamily="@font/montserrat_bold"
                            android:layout_marginStart="3dp"
                            tools:text="4.5" />

                        <ImageView
                            android:id="@+id/imgStar"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginStart="5dp"
                            android:src="@drawable/outline_star_24"
                            android:contentDescription="Rating"
                            app:tint="@color/warning_color" />



                    </LinearLayout>

                </LinearLayout>

                <!-- Date Container -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:id="@+id/imgDate"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/outline_calendar_today_24"
                        android:contentDescription="@string/select"
                        app:tint="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/txtDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 Jan 2025"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="13sp"
                        android:fontFamily="@font/montserrat_medium"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginStart="4dp"
                        tools:text="15 Jan 2025" />

                </LinearLayout>

                <!-- Time Range Container -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp">

                    <ImageView
                        android:id="@+id/imgTime"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/outline_access_time_24"
                        android:contentDescription="@string/select"
                        app:tint="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/txtStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:00 AM"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="13sp"
                        android:fontFamily="@font/montserrat_medium"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginStart="4dp"
                        tools:text="10:00 AM" />

                    <TextView
                        android:id="@+id/txtTimeSeparator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - "
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="13sp"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/txtEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00 PM"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="13sp"
                        android:fontFamily="@font/montserrat_medium"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="12:00 PM" />

                </LinearLayout>

            </LinearLayout>

            <!-- More/Details Button -->
            <ImageView
                android:id="@+id/imgArrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/outline_arrow_forward_ios_black_20"
                app:tint="@color/text_hint"
                android:alpha="0.6"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardJobDetails"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/textStages"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/job_stages"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:textStyle="bold"
            android:letterSpacing="0.01"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewStages"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:clipToPadding="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:scrollbars="vertical"
            app:layout_constraintTop_toBottomOf="@+id/textStages"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>